<?xml version="1.0" encoding="utf-8"?>
<!--电影简介布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="8dp">
    <!--电影海报-->
    <ImageView
        android:id="@+id/iv_item_simple_subject_image"
        android:layout_width="100dp"
        android:layout_height="142dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />
    <!--简讯-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        android:padding="8dp">
        <!--评分,评价人数-->
        <LinearLayout
            android:id="@+id/ll_item_simple_subject_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <!--星-->
            <RatingBar
                android:id="@+id/rb_item_simple_subject_rating"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5" />
            <!--评分分数-->
            <TextView
                android:id="@+id/tv_item_simple_subject_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/red" />
            <!--评价人数-->
            <TextView
                android:id="@+id/tv_item_simple_subject_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/gray"
                android:textSize="12sp" />

        </LinearLayout>
        <!--电影名-->
        <TextView
            android:id="@+id/tv_item_simple_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <!--原名-->
        <TextView
            android:id="@+id/tv_item_simple_subject_original_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:maxLines="1" />

        <!--影片类型-->
        <TextView
            android:id="@+id/tv_item_simple_subject_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/blue"
            android:textSize="12sp" />
        <!--导演-->
        <TextView
            android:id="@+id/tv_item_simple_subject_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:maxLines="1" />
        <!--主演-->
        <TextView
            android:id="@+id/tv_item_simple_subject_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:maxLines="1" />
    </LinearLayout>

</LinearLayout>